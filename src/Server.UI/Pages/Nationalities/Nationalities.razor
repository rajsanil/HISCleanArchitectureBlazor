@page "/pages/nationalities"
@using CleanArchitecture.Blazor.Application.Features.Nationalities.DTOs
@using CleanArchitecture.Blazor.Application.Features.Nationalities.Queries.GetAll
@using CleanArchitecture.Blazor.Application.Features.Nationalities.Commands.AddEdit
@using CleanArchitecture.Blazor.Application.Features.Nationalities.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.Nationalities.Caching
@using CleanArchitecture.Blazor.Application.Features.Nationalities.Mappers
@using CleanArchitecture.Blazor.Server.UI.Pages.Nationalities.Components

@inject IStringLocalizer<Nationalities> L
@attribute [Authorize(Policy = Permissions.Nationalities.View)]

<PageTitle>@L["Nationalities"]</PageTitle>

<MudPaper Elevation="0" Class="pa-4">
    <TelerikGrid Data="@_nationalities"
                 FilterMode="GridFilterMode.FilterMenu"
                 Sortable="true"
                 Pageable="true"
                 PageSize="15"
                 Resizable="true"
                 Reorderable="true"
                 SelectionMode="GridSelectionMode.Single"
                 @bind-SelectedItems="@_selectedItems"
                 Height="calc(100vh - 300px)">
        <GridToolBarTemplate>
            <MudStack Row Spacing="2" Class="flex-grow-1" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                <MudStack Row AlignItems="AlignItems.Center">
                    <MudIcon Icon="@Icons.Material.Filled.Flag" Size="Size.Large" Color="Color.Primary" />
                    <MudStack Spacing="0">
                        <MudText Typo="Typo.h6">@L["Nationalities"]</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">@L["Manage nationalities"]</MudText>
                    </MudStack>
                </MudStack>
                <MudStack Row Spacing="1">
                    <MudButton Disabled="@_loading"
                               OnClick="@OnRefresh"
                               StartIcon="@Icons.Material.Outlined.Refresh"
                               Variant="Variant.Text">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_canCreate)
                    {
                        <MudButton StartIcon="@Icons.Material.Outlined.Add"
                                   OnClick="OnCreate"
                                   Color="Color.Primary"
                                   Variant="Variant.Filled">
                            @ConstantString.New
                        </MudButton>
                    }
                </MudStack>
            </MudStack>
        </GridToolBarTemplate>
        <GridColumns>
            <GridColumn Width="100px" Title="@ConstantString.Actions" Sortable="false" Filterable="false">
                <Template>
                    @{
                        var item = context as NationalityDto;
                        @if (_canEdit || _canDelete)
                        {
                            <MudStack Row Spacing="1">
                                @if (_canEdit)
                                {
                                    <MudIconButton Icon="@Icons.Material.Filled.Edit" 
                                                 Size="Size.Small" 
                                                 Color="Color.Info"
                                                 OnClick="@(() => OnEdit(item!))" />
                                }
                                @if (_canDelete)
                                {
                                    <MudIconButton Icon="@Icons.Material.Filled.Delete" 
                                                 Size="Size.Small" 
                                                 Color="Color.Error"
                                                 OnClick="@(() => OnDelete(item!))" />
                                }
                            </MudStack>
                        }
                        else
                        {
                            <MudIconButton Variant="Variant.Filled"
                                         Disabled="true"
                                         Icon="@Icons.Material.Filled.DoNotTouch"
                                         Size="Size.Small"
                                         Color="Color.Surface">
                            </MudIconButton>
                        }
                    }
                </Template>
            </GridColumn>
            <GridColumn Field="@nameof(NationalityDto.Code)" Title="@L["Code"]" Width="120px" />
            <GridColumn Field="@nameof(NationalityDto.Name)" Title="@L["Name"]" />
            <GridColumn Field="@nameof(NationalityDto.NameArabic)" Title="@L["Name (Arabic)"]" />
            <GridColumn Field="@nameof(NationalityDto.IsActive)" Title="@L["Active"]" Width="100px">
                <Template>
                    @{
                        var item = context as NationalityDto;
                        <MudCheckBox T="bool" Value="@(item?.IsActive ?? false)" ReadOnly="true" Color="Color.Primary" />
                    }
                </Template>
            </GridColumn>
        </GridColumns>
    </TelerikGrid>
</MudPaper>

@code {
    [CascadingParameter] private Task<AuthenticationState> AuthState { get; set; } = default!;
    
    private IEnumerable<NationalityDto> _nationalities = new List<NationalityDto>();
    private IEnumerable<NationalityDto> _selectedItems = new List<NationalityDto>();
    private bool _loading;
    private bool _canCreate;
    private bool _canEdit;
    private bool _canDelete;
    private bool _canSearch;
    private bool _canExport;
    private bool _canImport;

    protected override async Task OnInitializedAsync()
    {
        var state = await AuthState;
        _canCreate = (await AuthService.AuthorizeAsync(state.User, Permissions.Nationalities.Create)).Succeeded;
        _canSearch = (await AuthService.AuthorizeAsync(state.User, Permissions.Nationalities.Search)).Succeeded;
        _canEdit = (await AuthService.AuthorizeAsync(state.User, Permissions.Nationalities.Edit)).Succeeded;
        _canDelete = (await AuthService.AuthorizeAsync(state.User, Permissions.Nationalities.Delete)).Succeeded;
        _canImport = (await AuthService.AuthorizeAsync(state.User, Permissions.Nationalities.Import)).Succeeded;
        _canExport = (await AuthService.AuthorizeAsync(state.User, Permissions.Nationalities.Export)).Succeeded;
        await LoadData();
    }

    private async Task LoadData()
    {
        _loading = true;
        try
        {
            _nationalities = await Mediator.Send(new GetAllNationalitiesQuery());
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task OnRefresh()
    {
        NationalityCacheKey.Refresh();
        await LoadData();
    }

    private async Task OnCreate()
    {
        var command = new AddEditNationalityCommand();
        await ShowEditFormDialog(string.Format(ConstantString.CreateAnItem, L["Nationality"]), command);
    }

    private async Task OnEdit(NationalityDto dto)
    {
        var command = NationalityMapper.CloneFromDto(dto);
        await ShowEditFormDialog(string.Format(ConstantString.EditTheItem, L["Nationality"]), command);
    }

    private async Task OnDelete(NationalityDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Name);
        var command = new DeleteNationalityCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText, async () =>
        {
            await InvokeAsync(async () =>
            {
                await LoadData();
            });
        });
    }

    private async Task ShowEditFormDialog(string title, AddEditNationalityCommand command)
    {
        var parameters = new DialogParameters<NationalityFormDialog>
        {
            { x => x.Model, command }
        };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<NationalityFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await LoadData();
        }
    }
}

