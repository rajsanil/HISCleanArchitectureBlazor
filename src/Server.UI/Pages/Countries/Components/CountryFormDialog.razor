@using CleanArchitecture.Blazor.Application.Features.Countries.Commands.AddEdit
@using CleanArchitecture.Blazor.Application.Features.Countries.DTOs
@inject IStringLocalizer<Countries> L

<MudDialog>
    <DialogContent>
        <MudForm Model="@Model" @ref="@_form">
            <MudGrid Spacing="2">
                <MudItem xs="12" sm="6">
                    <MudTextField Label="@L["Code"]" @bind-Value="Model.Code" For="@(() => Model.Code)" Required="true" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudTextField Label="@L["Name"]" @bind-Value="Model.Name" For="@(() => Model.Name)" Required="true" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudTextField Label="@L["Name (Arabic)"]" @bind-Value="Model.NameArabic" For="@(() => Model.NameArabic)" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudTextField Label="@L["ISO2 Code"]" @bind-Value="Model.Iso2Code" For="@(() => Model.Iso2Code)" MaxLength="2" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudTextField Label="@L["ISO3 Code"]" @bind-Value="Model.Iso3Code" For="@(() => Model.Iso3Code)" MaxLength="3" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudTextField Label="@L["Phone Code"]" @bind-Value="Model.PhoneCode" For="@(() => Model.PhoneCode)" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudCheckBox Label="@L["Is Active"]" @bind-Value="Model.IsActive" For="@(() => Model.IsActive)" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@ConstantString.Cancel</MudButton>
        <MudLoadingButton Loading="@_saveingnew" OnClick="SaveAndNew">@ConstantString.SaveAndNew</MudLoadingButton>
        <MudLoadingButton Loading="@_saving" OnClick="Submit">@ConstantString.Save</MudLoadingButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
    [EditorRequired][Parameter] public AddEditCountryCommand Model { get; set; } = default!;
    [Parameter] public Action? Refresh { get; set; }
    private MudForm? _form;
    private bool _saving;
    private bool _saveingnew;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        _saving = true;
        try
        {
            await _form!.Validate().ConfigureAwait(false);
            if (!_form!.IsValid)
            {
                // FluentValidation errors are already displayed on form fields
                Snackbar.Add("Please correct the validation errors.", Severity.Warning);
                return;
            }
            
            var result = await Mediator.Send(Model);
            result.Match(
                data =>
                {
                    MudDialog.Close(DialogResult.Ok(true));
                    Snackbar.Add(ConstantString.SaveSuccess, Severity.Info);
                    return data;
                },
                errors =>
                {
                    // Display errors from database or other sources
                    foreach (var error in errors.Split('\n', StringSplitOptions.RemoveEmptyEntries))
                    {
                        Snackbar.Add(error.Trim(), Severity.Error);
                    }
                    return 0;
                });
        }
        finally
        {
            _saving = false;
        }
    }

    private async Task SaveAndNew()
    {
        _saveingnew = true;
        try
        {
            await _form!.Validate().ConfigureAwait(false);
            if (!_form!.IsValid)
            {
                Snackbar.Add("Please correct the validation errors.", Severity.Warning);
                return;
            }
            
            var result = await Mediator.Send(Model);
            result.Match(
                data =>
                {
                    Snackbar.Add(ConstantString.SaveSuccess, Severity.Info);
                    Model = new AddEditCountryCommand();
                    _form!.ResetAsync();
                    return data;
                },
                errors =>
                {
                    foreach (var error in errors.Split('\n', StringSplitOptions.RemoveEmptyEntries))
                    {
                        Snackbar.Add(error.Trim(), Severity.Error);
                    }
                    return 0;
                });
        }
        finally
        {
            _saveingnew = false;
        }
    }
}
