@page "/countries"
@using HIS.Application.Interfaces
@using HIS.Application.DTOs
@inject ICountryService CountryService
@rendermode InteractiveServer

<PageTitle>Countries</PageTitle>

<h1>Country Management</h1>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="ShowCreateForm">
        <i class="bi bi-plus-circle"></i> Add New Country
    </button>
</div>

@if (showCreateForm)
{
    <div class="card mb-3">
        <div class="card-header">
            <h5>@(isEditing ? "Edit Country" : "Create New Country")</h5>
        </div>
        <div class="card-body">
            <EditForm Model="@countryDto" OnValidSubmit="HandleSubmit">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Country Name</label>
                            <InputText class="form-control" @bind-Value="countryDto.Name" placeholder="Enter country name" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Country Code</label>
                            <InputText class="form-control" @bind-Value="countryDto.Code" placeholder="e.g., US, UK, IN" maxlength="10" />
                            <small class="text-muted">2-3 letter country code</small>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <InputTextArea class="form-control" @bind-Value="countryDto.Description" rows="3" placeholder="Optional description" />
                </div>
                <div>
                    <button type="submit" class="btn btn-success">@(isEditing ? "Update" : "Create")</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@if (loading)
{
    <p><em>Loading countries...</em></p>
}
else if (countries.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in countries)
                {
                    <tr>
                        <td><strong>@country.Code</strong></td>
                        <td>@country.Name</td>
                        <td>@country.Description</td>
                        <td>
                            <button class="btn btn-sm btn-warning" @onclick="() => EditCountry(country)">Edit</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteCountry(country.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p><em>No countries found.</em></p>
}

@code {
    private List<CountryDto> countries = new();
    private CreateCountryDto countryDto = new();
    private bool loading = true;
    private bool showCreateForm = false;
    private bool isEditing = false;
    private Guid? editingCountryId;

    protected override async Task OnInitializedAsync()
    {
        await LoadCountries();
    }

    private async Task LoadCountries()
    {
        loading = true;
        var result = await CountryService.GetAllCountriesAsync();
        countries = result.ToList();
        loading = false;
    }

    private void ShowCreateForm()
    {
        countryDto = new CreateCountryDto();
        isEditing = false;
        editingCountryId = null;
        showCreateForm = true;
    }

    private async Task EditCountry(CountryDto country)
    {
        countryDto = new CreateCountryDto
        {
            Name = country.Name,
            Code = country.Code,
            Description = country.Description
        };
        isEditing = true;
        editingCountryId = country.Id;
        showCreateForm = true;
    }

    private async Task HandleSubmit()
    {
        try
        {
            if (isEditing && editingCountryId.HasValue)
            {
                await CountryService.UpdateCountryAsync(editingCountryId.Value, countryDto);
            }
            else
            {
                await CountryService.CreateCountryAsync(countryDto);
            }

            await LoadCountries();
            CancelForm();
        }
        catch (Exception ex)
        {
            // Handle error - in production, use proper error handling
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private void CancelForm()
    {
        showCreateForm = false;
        countryDto = new CreateCountryDto();
        isEditing = false;
        editingCountryId = null;
    }

    private async Task DeleteCountry(Guid id)
    {
        // Note: In a production application, implement proper confirmation dialog using JavaScript interop
        // or a modal component before deleting
        await CountryService.DeleteCountryAsync(id);
        await LoadCountries();
    }
}
